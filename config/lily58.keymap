#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            display-name = "Base";
            bindings = <
&kp ESC    &kp N1  &kp N2  &kp N3    &kp N4    &kp N5                         &kp N6         &kp N7  &kp N8     &kp N9   &kp N0    &kp PLUS
&kp TAB    &kp Q   &kp W   &kp E     &kp R     &kp T                          &kp Y          &kp U   &kp I      &kp O    &kp P     &kp MINUS
&kp LCTRL  &kp A   &kp S   &kp D     &kp F     &kp G                          &kp H          &kp J   &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z   &kp X   &kp C     &kp V     &kp B   &kp LBKT     &kp RBKT  &kp N          &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                           &kp LALT  &kp LGUI  &mo 1   &kp SPACE    &kp RET   &kp BACKSPACE  &mo 2   &kp RGUI
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        symbols {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Lower";
            bindings = <
&kp F11         &kp F1           &kp F2            &kp F3            &kp F4            &kp F5                             &kp F6         &kp F7                &kp F8                 &kp F9             &kp F10           &kp F12
&kp CLCK        &kp EXCLAMATION  &kp AT_SIGN       &kp LBKT          &kp RBKT          &kp COMMA                          &kp LS(CARET)  &kp LESS_THAN         &kp GREATER_THAN       &kp PIPE           &kp GREATER_THAN  &kp F12
&kp LCTRL       &kp GRAVE        &kp SINGLE_QUOTE  &kp LEFT_BRACE    &kp RIGHT_BRACE   &kp SEMI                           &kp COLON      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp DOUBLE_QUOTES  &kp RPAR          &kp TILDE
&kp LEFT_SHIFT  &kp              &kp               &kp LEFT_BRACKET  &kp SINGLE_QUOTE  &kp        &kp LBKT     &kp RBKT   &kp MINUS      &kp PLUS              &kp EQUAL              &kp BACKSLASH      &kp RBRC          &kp PIPE
                                                   &kp               &kp               &mo 1      &kp SPACE    &kp ENTER  &kp DEL        &mo 2                 &kp
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        navigation {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Raise";
            bindings = <
&kp F11         &kp     &kp         &kp       &kp      &kp                                &kp            &kp        &kp       &kp        &kp        &kp
&kp GRAVE       &kp N1  &kp N2      &kp N3    &kp N4   &kp N5                             &kp N6         &kp N7     &kp UP    &kp N9     &kp N0     &kp
&kp LCTRL       &kp F2  &kp INSERT  &kp HOME  &kp END  &kp PAGE_UP                        &kp PAGE_DOWN  &kp LEFT   &kp DOWN  &kp RIGHT  &kp RIGHT  &kp
&kp LEFT_SHIFT  &kp F8  &kp F9      &kp F10   &kp F11  &kp F12      &kp          &kp      &kp KP_PLUS    &kp MINUS  &kp DOWN  &kp LBKT   &kp RBKT   &kp BSLH
                                    &kp       &kp      &mo 1        &kp SPACE    &kp RET  &kp DEL        &mo 2      &kp
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
